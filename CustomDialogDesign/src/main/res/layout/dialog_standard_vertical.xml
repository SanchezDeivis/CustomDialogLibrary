<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/view_color_area"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="12dp"/>

            <include layout="@layout/view_title_and_message"/>

        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/cd_btn_yes"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textStyle="bold"
        android:gravity="end|center_vertical"
        android:paddingLeft="@dimen/cd_side_margin"
        android:paddingRight="@dimen/cd_side_margin"
        android:visibility="gone"/>

    <Button
        android:id="@+id/cd_btn_no"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textStyle="bold"
        android:gravity="end|center_vertical"
        android:paddingLeft="@dimen/cd_side_margin"
        android:paddingRight="@dimen/cd_side_margin"
        android:visibility="gone"/>

    <Button
        android:id="@+id/cd_btn_neutral"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textStyle="bold"
        android:gravity="end|center_vertical"
        android:paddingLeft="@dimen/cd_side_margin"
        android:paddingRight="@dimen/cd_side_margin"
        android:visibility="gone"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="12dp"/>


</LinearLayout>